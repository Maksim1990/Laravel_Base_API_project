                            },
                            "c_password": {
                                "type": "string"
                            }
                        },
                        "type": "object"
                    }
                ]
            },
            "UserItem": {
                "type": "object",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/User"
                    },
                    {
                        "properties": {
                            "id": {
                                "type": "integer"
                            },
                            "name": {
                                "type": "string"
                            },
                            "email": {
                                "type": "string"
                            },
                            "created_at": {
                                "type": "string",
                                "format": "date"
                            },
                            "updated_at": {
                                "type": "string",
                                "format": "date"
                            }
                        },
                        "type": "object"
                    }
                ]
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "description": "Oauth2 security",
                "name": "oauth2",
                "in": "header",
                "flows": {
